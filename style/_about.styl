@import '_vars'

#about
	
	.main
		display flex
		padding-top 40px
		align-items center
		
		.left-content
			width 55%
			padding-left 10%
			box-sizing border-box

			.about-content
				width 100%
				
				p
					animation(.7s, .2s)
				
			.about-header
				width 80%
				margin-bottom 30px
				animation(.5s, .1s)
				
				h5
					font-size 1.05em
					line-height 1.6em
		.right-content
			width 45%
			padding-left 20px
			box-sizing border-box
			
			.tldr
				text-align center
				font-family primary-font
				font-weight 800
				color #aeaeae
				animation(.7s, .3s)
			
			.cards
				display flex
				justify-content center
				font-family primary-font
				flex-wrap wrap
				font-weight 800
				margin-top 30px
				
				
				.skill-card
					flex-grow 0
					flex-shrink 0
					padding 8px
					box-sizing border-box
					border-bottom 1px solid #ededed
					border-right 1px solid #ededed
					//box-shadow 5px 5px 0px 0px rgba(0,0,0,0.1)
					margin 8px 8px
					color #3a3a3a
					animation(.5s, 0)
					
					&:nth-of-type(2n) 
						animation(.5s, .1s)

		
@media (max-width 800px)
	#about
		.main
			.left-content
				width 100%
				padding-right 10%
				
			.right-content
				display none