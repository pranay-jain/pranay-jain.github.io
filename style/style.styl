@import '_landing'
@import '_vars'
@import '_proj'
@import '_about'
@import '_contact'

*, body
	margin 0
	padding 0
	-webkit-font-smoothing antialiased
	z-index 0
	
.no-display
	visibility hidden

body
	overflow-x hidden
	
section
	width 100%
	padding-top 80px
	padding-bottom 80px
	z-index -2
h1
	font-family primary-font
	font-size 2em
	text-align center
	color #fff
	font-weight 700
	text-align left
	
h2
	font-family primary-font
	font-size 1.5em
	line-height 1.3em
	font-weight 700
	

h4
	position relative
	left 10%
	display inline 
	font-family primary-font
	font-weight 700
	color #222
	font-size 1.2em
	line-height 1em
	cursor pointer
	
	&:before
		content ''
		width 50%
		border-bottom 6px solid primary-red
		//border-image(2)
		// TODO: apply gradient here
		position absolute
		top 0.8em
		opacity 0.7
		z-index -1
		transition(.4s)
		
	&:hover::before
		width 102%
		
h5
	font-family primary-font
	font-weight 700
	font-size 2.5em
	line-height 2em
	
p
	font-family secondary-font
	font-weight 400
	color #555
	font-size 0.85em
	line-height 1.8em
	
footer
	width 100%
	display flex
	justify-content center
	margin-top 80px
	














