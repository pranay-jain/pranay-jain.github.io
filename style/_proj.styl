@import '_vars'

#projects
	width 100%
		
	.project
		width 75%
		margin 0 auto
		margin-top 100px
		display flex
		
		.proj_image
			min-width 280px
			width 280px
			height 280px
			background #fff
			box-shadow 5px 5px 10px 0px #dedede
			
			img
				width 100%
				height 100%
		
		.content
			position relative
			left 20px
			padding-top 10px
			padding-bottom 10px
			box-sizing border-box
			
			.heading
				position relative
				left -50px
				z-index 2
				margin-bottom 20px
				
				h2
					text-align left
					font-size 2em
				h3
					text-align right
					font-family primary-font
					font-size 0.9em
					line-height 20px
					text-transform uppercase
					text-align left
					font-weight 700
					color #999
					line-height 1.3em

			p 
				position relative
				min-width 60%
	.project:nth-of-type(2n)
		flex-direction row-reverse
		
		.heading
			left 50px
			
			h2,h3
				text-align right
			
		.content
			text-align right
			left -20px
						
		.proj_image
			box-shadow -5px 5px 10px 0 #dedede
			
	@media (max-width: 700px)
		.project,.project:nth-of-type(2n)

			flex-direction column
			align-items center
			
			.content
				text-align center
				left 0
				margin-top 30px
				
				.heading
					h2,h3
						text-align center

				.heading
					left 0




			