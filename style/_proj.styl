@import '_vars'

#projects
	width 100%
		
	.project
		width 75%
		margin 0 auto
		margin-top 100px
		display flex
		
		.proj_image
			min-width 280px
			width 280px
			height 280px
			background #fff
			box-shadow 8px 8px 0px 0px rgba(0,0,0,0.07)
			-webkit-transition all .3s cubic-bezier(0.42, -0.7, 0.5, 2) 
			cursor pointer
			animation(.6s, 0)
			overflow hidden
				
			img
				width 100%
				height 100%
				-webkit-transition all .6s ease 
				-webkit-transform scale(1.03)
				
			img:hover
				width 100%
				height 100%
				-webkit-transform scale(1)
				
			&:hover 
				box-shadow 15px 15px 0px 0px rgba(0,0,0,0.07)
		
		.content
			position relative
			left 20px
			padding-top 10px
			padding-bottom 10px
			box-sizing border-box
			
			.heading
				position relative
				left -50px
				z-index 2
				margin-bottom 20px
				animation(.7s, 0)
				
				h2
					text-align left
					font-size 2em
				h3
					text-align right
					font-family primary-font
					font-size 0.9em
					line-height 20px
					text-transform uppercase
					text-align left
					font-weight 700
					color #999
					line-height 1.3em

			p 
				position relative
				min-width 60%
				animation(.9s, .3s)
				
	.project:nth-of-type(2n)
		flex-direction row-reverse
		
		.heading
			left 50px
			
			h2,h3
				text-align right
			
		.content
			text-align right
			left -20px
						
		.proj_image
			box-shadow -8px 8px 0px 0 rgba(0,0,0,0.07)
			
			&:hover 
				box-shadow -16px 16px 0px 0px rgba(0,0,0,0.07)
			
	@media (max-width: 700px)
		.project,.project:nth-of-type(2n)

			flex-direction column
			align-items center
			
			.content
				text-align center
				left 0
				margin-top 30px
				
				.heading
					h2,h3
						text-align center

				.heading
					left 0




			