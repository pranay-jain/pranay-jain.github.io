@import '_vars'

#projects, #about
	padding-top 100px
	padding-bottom 100px
	width 100%
	
	h4
		width 80%
		margin 0 auto
		
	.project
		width 75%
		margin 0 auto
		margin-top 100px
		display flex
		
		.proj_image
			min-width 280px
			width 280px
			height 280px
			background #fff
			box-shadow 5px 5px 10px 0px #dedede
			
			img
				width 100%
				height 100%
				
			h2
				text-align left
				font-size 2em
			h3
				text-align right
				font-family primary-font
				font-size 0.9em
				line-height 20px
				text-transform uppercase
				text-align left
				font-weight 700
				color #999
				line-height 1.3em
				
			h2,h3
				position relative
				left 230px
				top -100%
				z-index 2
		
		.content
			position relative
			left 20px
			padding-top 90px
			padding-bottom 10px
			box-sizing border-box

			p 
				position relative
				min-width 60%
	.project:nth-of-type(2n)
		flex-direction row-reverse
		
		h2,h3
			left -230px
			text-align right
		
		p
			text-align right
			left 0
			
		.content
			left -20px
						
		.proj_image
			box-shadow -5px 5px 10px 0 #dedede





			