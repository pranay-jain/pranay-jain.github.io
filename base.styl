@import '_landing'
@import '_vars'
@import '_proj'

*, body
	margin 0
	padding 0
	-webkit-font-smoothing antialiased
	
section
	width 100%
h1
	font-family primary-font
	font-size 2em
	text-align center
	color #fff
	font-weight 700
	text-align left
	
h2
	font-family primary-font
	font-size 1.5em
	line-height 1.3em
	font-weight 700
	

h4
	position relative
	left 10%
	display inline 
	font-family primary-font
	font-weight 700
	color #222
	font-size 1.2em
	line-height 1em
	cursor pointer
	
	&:before
		content ""
		width 50%
		border-bottom 6px solid primary-red
		//border-image(2)
		// TODO: apply gradient here
		position absolute
		top 0.8em
		opacity 0.8
		z-index: -1
		transition(.5s)
		
	&:hover::before
		width 80%
	
p
	font-family secondary-font
	font-weight 400
	color #222
	font-size 0.95em
	line-height 1.5em